# CrowdSec settings
CROWDSEC_BOUNCER_API_KEY=your-crowdsec-bouncer-api-key
CROWDSEC_URL=http://your-crowdsec-host:8080/

# UniFi settings (use API key OR user/pass)
UNIFI_HOST=https://your-udm-ip:443
UNIFI_API_KEY=your-unifi-api-key
# Or use username/password:
# UNIFI_USER=your-username
# UNIFI_PASS=your-password
UNIFI_SKIP_TLS_VERIFY=true

# Log cleanup settings (to prevent MongoDB CPU overload)
UNIFI_LOG_CLEANUP=true
UNIFI_LOG_CLEANUP_USER=root
UNIFI_LOG_CLEANUP_PASSWORD=your-ssh-password
UNIFI_LOG_CLEANUP_MINUTES=30

# Debug logging
LOG_LEVEL=debug
